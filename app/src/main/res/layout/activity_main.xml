<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhairyagandhi.minimallogin.MainActivity"
    android:paddingTop="20dp"
    android:paddingLeft="40dp"
    android:background="@color/white">

    <LinearLayout
        android:paddingTop="20dp"
        android:weightSum="1"
        android:layout_width="328dp"
        android:layout_height="511dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="@string/app_name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Welcome back master,"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Sign in to continue to YourApp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelAnimating="true"
                app:met_baseColor="@color/black"
                app:met_primaryColor="@color/blue"
                app:met_errorColor="#ddaa00"
                app:met_floatingLabelText="Email"
                android:hint="Email"
                app:met_floatingLabel="highlight"
                app:met_hideUnderline="true"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelAnimating="true"
                android:hint="Password"
                app:met_floatingLabelText="Password"
                app:met_floatingLabel="highlight"
                app:met_baseColor="@color/black"
                app:met_primaryColor="@color/blue"
                app:met_errorColor="#ddaa00"
                app:met_hideUnderline="true"
                android:inputType="textPassword"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/blue"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">x1
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
